{
  "name": "@databridge/schema",
  "version": "1.0.0",
  "private": true,
  "description": "Shared database schema for DataBridge",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/migrate.ts",
    "db:migrate:multi-pipeline": "tsx scripts/run-migration.ts",
    "db:deploy": "tsx src/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts",
    "db:reset-seed": "tsx src/seed.ts --reset",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "0.29.5",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.9",
    "tsup": "^8.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
